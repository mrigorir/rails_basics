<!DOCTYPE html>
<html>
  <head>
    <title>BlogBasics</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="notice alert-primary padding text-center text-primary"><%= notice %></p>
    <%end%>

    <% if alert %>
      <p class="alert alert-danger padding text-center text-danger"><%= alert %></p>
    <%end%>

    <%= render 'shared/nav' %>
    <%= yield %>
  </body>
</html>
